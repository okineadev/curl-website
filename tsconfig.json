{
	"compilerOptions": {
		"jsx": "preserve",
		"esModuleInterop": true,
		"module": "NodeNext", // Changed from ESNext to NodeNext
		"moduleResolution": "NodeNext", // Changed from bundler to NodeNext
		"isolatedModules": true,
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": ["@types/react", "@vercel/node", "node"]
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
