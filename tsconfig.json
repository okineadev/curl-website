{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"jsx": "react-jsx",
		"allowImportingTsExtensions": true,

		"types": ["@types/react", "@types/node"]
	},
	"include": ["api/**/*.ts", "api/**/*.tsx"],
	"exclude": ["node_modules"]
}
