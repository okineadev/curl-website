{
	"references": [{ "path": "./tsconfig.bun.json" }],
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "Node16",
		"moduleResolution": "node16",
		"moduleDetection": "force",
		"target": "ESNext",

		"jsx": "react",
		"isolatedModules": true,

		"types": ["@types/react", "@types/node"]
	},
	"include": ["src/**/*.tsx", "src/**/*.ts", "api/**/*.tsx"]
}
